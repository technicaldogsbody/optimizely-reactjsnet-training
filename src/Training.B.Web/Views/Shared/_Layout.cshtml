@using EPiServer.Web.Mvc.Html
@using MediatR
@using React.AspNet
@using Training.B.Core.Constants
@using Training.B.Requests.Blocks.Header
@inject IMediator _mediator

@{
    var header = await _mediator.Send(new HeaderRequest());
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
</head>
<body>
    @await Html.RenderEPiServerQuickNavigatorAsync()
    @Html.FullRefreshPropertiesMetaData()
    <div class="container">
        @Html.React(ReactComponentNames.Header, header)
        @RenderBody()
    </div>
    <script asp-append-version="true" src="/scripts/client.bundle.js"></script>
    @Html.ReactInitJavaScript()
</body>
</html>